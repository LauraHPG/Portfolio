---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('galleryCollection')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
				margin-bottom: 1em;
				width: 100%;
				margin-bottom: 1rem;
				text-align: left;
				border-radius: 12px;
				padding-right: 1em;
				padding-left: 1em;
			}
			ul li * {
				text-decoration: none;
				/* transition: 0.2s ease; */
				transition: all .35s linear;

			}
			ul li img {
				width: 100%;
				margin: 0;
			}


			h1{
				color: black;
				font-size: xx-large;
				margin-bottom: 0;
			}
			a {
				margin: 0;
			}
			.best-images {
				display: flex;
				gap: 10px;
				height: 500px;
			}
			.best-images img {
				width: 100px;
				min-height: 100%;
				object-fit: cover;
				margin-right: 10px;
			}
			ul li:hover {
				color: rgb(var(--accent));
			}
			ul li:hover {
				box-shadow: var(--box-shadow);
				transition: all .35s linear;
			}
			.date
			{
				color: gray;
				margin-top: 0;
			}

			@media (max-width: 720px) {
				main
				{
					max-width: 85%;
					padding: 1em;
				}
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
						{
						posts.map((post) => (
							<li>
								<a class='container' href={`/gallery/${post.slug}/`}>
								
								<p class="title-date">
									<h1>{post.data.title}</h1>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</p>
									
									<p class="best-images">
										<img src={post.data.path + post.data.bestImages[0]} />
										<img src={post.data.path + post.data.bestImages[1]} />
										<img src={post.data.path + post.data.bestImages[2]} />
									</p>
									
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
