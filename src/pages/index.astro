---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { Image } from 'astro:assets';
import photoLaura from '../../imgs/fotoWeb.jpg';


import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro'

const posts = (await getCollection('blog')).sort(
	(a, b) =>  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const experience = (await getCollection('experience')).sort(
	(a, b) =>  b.data.startDate.valueOf() - a.data.endDate.valueOf()
);

const education = (await getCollection('education')).sort(
	(a, b) =>  b.data.startDate.valueOf() - a.data.endDate.valueOf()
);


---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>

			#intro
			{
				display: flex;
				justify-content: space-between;
				flex-wrap: wrap;
			}

			#intro >div
			{
				width: calc(45% - 1rem);

			}

			#photo
			{
				float:right;
			}

			#feature
			{
				display: flex;
				justify-content: center; 
				align-items: center;
			}


			ul{
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				/* transition: 0.2s ease; */
				transition: all .35s linear;
			}
			ul li .img-container
			{
				max-width: 720;
				max-height: 360;
				overflow: hidden; 
				border-radius: 12px;
				aspect-ratio: 5/3;
				position: relative;
			}
			ul li .img-container img {
				min-width: 100%;
				min-height: 100%;
				margin: 0;
				padding: 0;
				width: auto;
				object-fit: cover;
				position: absolute;    
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover .img-container {
				box-shadow: var(--box-shadow);
			}

			section{
				margin-top: 5em;
			}

			.title-info
			{
				grid-column-gap: 30px;
				grid-row-gap: 30px;
				grid-template-rows: auto auto;
				grid-template-columns: 1fr 1fr;
				grid-auto-columns: 1fr;
				display: flex;
			}

			.common-title
			{
				flex: 0 auto;
				align-self: auto;
				width: 100%;
				max-width: 400px;
			}

			@media (max-width: 720px) {
				#main-banner
				{
					height: auto;
				}
				ul, #intro{
					gap: 0.5em;
				}
				ul li, #intro div {
					width: 100%;
					text-align: center;
				}
				/* }
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				} */

				.title-info
				{
					display: block;
				}
			}

		</style>
	</head>	
	<body>
		<Header />
		<main>
			<div id="main-banner">
				<h4>Hi ðŸ‘‹, I'm Laura Hui PÃ©rez</h4>
				<h1>Computer Scientist</h1>
	
				<div id="intro">
					<div id="about-me">
						<p>Welcome to my website!</p>
						<p>I'm an Informatics Engineer, recently graduated from the Universitat PolitÃ¨cnica de Catalunya. My passion lies at the intersection of technology and biology. I'm particularly interested in how theoretical computer science and data science can be applied to solve complex biological and medical problems.</p>
						<p>Other activities that I really enjoy are drawing and photography.</p>
					</div>

					<div id="pothoContainer">
						<Image id="photo" width={500} src={photoLaura} alt="" />
					</div>
				</div>
			</div>
					
			<section>
						
				<div id	="feature">	
					<h2>Feature Projects</h2>
				</div>

				<ul>
					{
						[
							posts[0], 
							posts[1], 
							posts[4], 
							posts[6]  
						].map((post) => (
							<li>
								<a href={`/blog/${post.slug}/`}>
								<div class="img-container">
									<img src={post.data.heroImage} alt="" />
								</div>
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>

			<section>
				<div class="title-info">	
					<div class="common-title">
						<h2>Experience</h2>
					</div>
					<div class="common-info">
						{
							experience.map((post) => (
								<img width={75} height={75} src={post.data.logoCompany} alt="" />
								<h5>{post.data.title}</h5>
								<p><FormattedDate date={post.data.startDate}/> - <FormattedDate date={post.data.endDate}/> </p>
								<p>{post.data.description}</p>

							))
						}
						
					</div>
				</div>
			</section>


			<section>
				<div class="title-info">	
					<div class="common-title">
						<h2>Education</h2>
					</div>
					<div class="common-info">

						{
							education.map((post) => (
								<img width={75} height={75} src={post.data.logoCompany} alt="" />
								<h5>{post.data.title}</h5>
								<p><FormattedDate date={post.data.startDate}/> - <FormattedDate date={post.data.endDate}/> </p>
								<p>{post.data.description}</p>

							))
						}

					</div>
				</div>
			</section>


		</main>
		<Footer />
	</body>
</html>
